@model Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Title">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Subtitle">SubTitle</label>
                <input asp-for="Subtitle" class="form-control" placeholder="Subtitle">
            </div>
        </div>
        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="ImageUrl">ImageUrl</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="ImageUrl">
            </div>

            <div class="form-group col-md-4">
                <label asp-for="ProductImage.Photo"></label>
                <input type="file" asp-for="ProductImage.Photo" class="form-control" placeholder="Image">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </form>
</div>

